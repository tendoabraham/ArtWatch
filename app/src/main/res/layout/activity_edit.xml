<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Views.Edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:onClick="onbackPressed"
            android:src="@drawable/back7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit"
            android:textColor="@color/textGrey2"
            android:fontFamily="@font/khand_semi_bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/menu_black" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textGrey2"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/lawyerSignUp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_medium"
                android:text="@string/countryOfResidence"
                android:layout_gravity="bottom"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textGrey2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/countriesSpinner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_medium"
                android:text="@string/company"
                android:layout_gravity="bottom"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textGrey2" />
            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/khand_regular"
                android:hint="@string/company"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khand_medium"
                android:text="@string/contact"
                android:layout_gravity="bottom"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/textGrey2" />
            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/khand_regular"
                android:hint="@string/contact"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="@color/textGrey2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/khand_semi_bold"
                    android:text="@string/submit" />

                <Button
                    android:id="@+id/outlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:fontFamily="@font/khand_semi_bold"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    app:strokeColor="@color/teal_700"
                    style="?attr/materialButtonOutlinedStyle"
                    />
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artistEdit"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/dpImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:onClick="onDpAction"
                android:src="@drawable/user3" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/email"
            android:layout_gravity="bottom"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/emailAddress"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/khand_regular"
            android:hint="@string/email"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/textGrey2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/ssn"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/socialSecNo"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/rectangle"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/khand_regular"
                android:hint="@string/ssn"
                android:textColor="@color/teal_700"
                android:textColorHint="@color/textGrey2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/countryOfResidence"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/countriesSpinner2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/grey_line"
                android:padding="5dp" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/phonenumber"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/khand_regular"
            android:hint="@string/phonenumber"
            android:inputType="phone"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/textGrey2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/Address"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/khand_regular"
            android:hint="@string/Address"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/textGrey2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/NOK"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
            <EditText
                android:id="@+id/nextOfKin"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/khand_regular"
                android:hint="@string/NOK"
                android:textColor="@color/teal_700"
                android:textColorHint="@color/textGrey2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/NOKPhone"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
            <EditText
                android:id="@+id/nextOfKinPhoneNumber"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:paddingHorizontal="10dp"
                android:fontFamily="@font/khand_regular"
                android:inputType="phone"
                android:hint="@string/NOKPhone"
                android:textColor="@color/teal_700"
                android:textColorHint="@color/textGrey2"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khand_medium"
            android:text="@string/description"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textGrey2" />
        <EditText
            android:id="@+id/descriptionOfWork"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:layout_marginTop="2dp"
            android:background="@drawable/rectangle"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:fontFamily="@font/khand_regular"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:textColor="@color/teal_700"
            android:textColorHint="@color/textGrey2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/submitEdit"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/khand_semi_bold"
                android:text="@string/submit" />

            <Button
                android:id="@+id/cancelEdit"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:fontFamily="@font/khand_semi_bold"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:text="@string/cancel"
                app:strokeColor="@color/teal_700"
                android:onClick="onbackPressed"
                style="?attr/materialButtonOutlinedStyle"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>