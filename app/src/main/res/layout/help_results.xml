<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incidentCard1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/grey2"
        android:layout_marginHorizontal="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_margin="20dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/FAQTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/howto"
                    android:fontFamily="@font/khand_regular"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/orange"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:id="@+id/FAQContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khand_regular"
                    android:textColor="@color/textGrey2"
                    android:text="@string/incidenttext"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>