            android:name=".Views.Artists"
            android:exported="false" />
        <activity
            android:name=".Views.Help"
            android:exported="false" />
        <activity
            android:name=".Views.Incident"
            android:exported="false" />
        <activity
            android:name=".Views.Rights"
            android:exported="false" />
        <activity
            android:name=".Views.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>